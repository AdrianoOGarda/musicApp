

<div class="card">
  <h5 class="card-header">{{this.name}}</h5>
  <div class="card-body">
    <h5 class="card-title">{{band}}</h5>
    <p class="card-text">{{date}}</p>
     <p class="card-text">${{price}}.00 MXN</p>
    {{#if @root.listener}}
      <form action="/concert-pay/{{_id}}" method="post">
      <button type="submit">Buy Ticket</button>
      </form>
      {{/if}}
  </div>
</div>