<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">

  <br><br>

  <label for="image-input">Image:</label> <br>
  <input type="file" name="image" id="image-input" class="form-control-file" />

  <br><br>

      <select class="custom-select" name='role'>
        <option selected>User type:</option>
        <option value="MUSICIAN">Musician / Band</option>
        <option value="USER">Listener</option>
      </select>


  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>
